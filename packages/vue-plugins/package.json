{
    "name": "vue-plugins",
    "version": "0.0.0",
    "private": true,
    "type": "module",
    "files": [
        "dist"
    ],
    "main": "./dist/vue-plugins.umd.cjs",
    "module": "./dist/vue-plugins.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/vue-plugins.js",
            "require": "./dist/vue-plugins.umd.cjs"
        },
        "./style.css": "./dist/vue-plugins.css"
    },
    "scripts": {
        "dev": "vite --host 0.0.0.0 --port 3005",
        "build": "run-p type-check \"build-only {@}\" -- && run-p generate:types",
        "generate:types": "vue-tsc -p tsconfig.lib.json",
        "preview": "vite preview",
        "build-only": "vite build",
        "type-check": "vue-tsc --build",
        "lint": "eslint . --fix"
    },
    "dependencies": {
        "defu": "^6.1.4",
        "tippy.js": "^6.3.7",
        "vue": "^3.5.18"
    },
    "devDependencies": {
        "@types/node": "^24.2.0",
        "@vitejs/plugin-vue": "^6.0.1",
        "eslint": "^9.32.0",
        "eslint-config": "workspace:*",
        "jiti": "^2.4.2",
        "npm-run-all2": "^8.0.4",
        "tsconfig": "workspace:*",
        "typescript": "~5.8.3",
        "vite": "^7.0.6",
        "vite-plugin-checker": "^0.10.2",
        "vite-plugin-vue-devtools": "^8.0.0",
        "vue-tsc": "^3.0.5"
    }
}
