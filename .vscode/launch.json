    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Masterclass Debug",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/apps/masterclass"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Vue + Typescript Debug",
            "url": "http://localhost:3001",
            "webRoot": "${workspaceFolder}/apps/vue-typescript"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Vue Router Debug",
            "url": "http://localhost:3002",
            "webRoot": "${workspaceFolder}/apps/vue-router"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Vue + Tailwind Debug",
            "url": "http://localhost:3003",
            "webRoot": "${workspaceFolder}/apps/vue-tailwind"
