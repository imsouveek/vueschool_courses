{
    "$schema": "https://turborepo.com/schema.json",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": [".nuxt/**", "dist/**", ".output/**"]
        },

        "dev": {
            "persistent": true,
            "cache": false
        },

        "test": {
            "persistent": true,
            "cache": false
        },

        "test:e2e": {
            "persistent": true,
            "cache": false
        },

        "lint": {}
    }
}
